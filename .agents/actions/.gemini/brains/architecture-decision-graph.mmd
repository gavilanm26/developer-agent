    B1 --> C1[Direct Controller -> Service]
    B1 --> C2[No Custom Ports]
    
    A -- Medium (Standard) --> B2[Hexagonal Standard]
    B2 --> D1[Controller -> UseCase]
    B2 --> D2[UseCase -> Port Interface]
    B2 --> D3[Port -> Repo Adapter]
    
